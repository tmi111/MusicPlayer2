<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/song_list_option"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/music_name"
        android:text="歌名"
        android:textSize="@dimen/text_demen_big"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_alignBottom="@id/song_list_option"
        android:layout_width="10dp"
        android:id="@+id/music_style"
        android:src="@mipmap/ic_launcher"
        android:layout_height="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="歌手名"
        android:textSize="@dimen/text_demen_small"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/music_style"
        android:id="@+id/singer"/>


</RelativeLayout>